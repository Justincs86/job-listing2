<div class="login-wrap">
  <div class="moving-bg">
    <img src="http://oggx6lf7f.bkt.clouddn.com/5hpp3.jpg" class="change">
  </div>

  <div class="registration-wrap">
    <div class="registration-block">
      <div class="content clearfix">
        <div class="right-part fr">
          <div class="devise">
            <h2><img src="http://oggx6lf7f.bkt.clouddn.com/u2k8f.png">Login</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email" %>
                <%= f.input :password, required: false, label: false, placeholder: "Password" %>
                <%= f.input :remember_me, inline_label: 'Remember me', label: false, as: :boolean if devise_mapping.rememberable? %>
                <div class="forget-password">
                  <%= link_to "Forgot passwordï¼Ÿ", new_password_path(resource_name) %><br />
                </div>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Login", class: "registration-btn" %>
              </div>
            <% end %>

            <div class="tip">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
