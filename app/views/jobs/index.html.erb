<div class="col-md-12">
	<div class="row">
		<div class="col-md-8">
		</div>
		<div class="col-md-4">
      <div class="dropdown clearfix pull-right">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" >
          排序
          <span class="caret"></span>
        </button>

        <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
          <li> <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %> </li>
          <li> <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %> </li>
          <li> <%= link_to("按照发表时间排序", jobs_path) %> </li>
        </ul>
      </div>
    </div>
  </div>
</div>











      <div class="row">
        <div class="col-md-8 col-centered">
          <% @jobs.each do |job| %>
            <div id="job-section">
               <div class="wrapper">
                 <div class="job-section">


                   <div class="company">
                     <h3>
                       <%= link_to(job.title, job_path(job)) %>
                     </h3>
                     <div class="company-name">
                       <p class="text"> company name </p>
                     </div>
                     <p><i class="fa fa-globe" aria-hidden="true"></i>
                     &nbsp;&nbsp;&nbsp;
                     Kuala lumpur
                     &nbsp;&nbsp;&nbsp;
                     <i class="icon fa fa-usd" aria-hidden="true"></i>
	                    <%= job.wage_lower_bound / 1000 %> K -
	                    <%= job.wage_upper_bound / 1000 %> K

                    </p>


                     <p> <%= job.description %> </p>
                   </div>


                     <div class="button">
                       <%= link_to(('Apply now'), new_job_resume_path(job), class: "btn btn-info", method: :get) %>
                     </div>
                   </div>

                </div>
               </div>

          <% end %>
        </div>
      </div>





<div class="text-center">
    <%= will_paginate @jobs, renderer: BootstrapPagination::Rails  %>
</div>
